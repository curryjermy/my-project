// Spinner Start
#spinner.show.w-100.vh-100.bg-white.position-fixed.translate-middle.top-50.start-50.d-flex.align-items-center.justify-content-center
  .spinner-grow.text-primary(role='status')
// Spinner End
// Navbar start
.container-fluid.fixed-top
  .container.px-0
    nav.navbar.navbar-light.bg-white.navbar-expand-xl
      a.navbar-brand(href='/stock-view')
        h1.text-primary.display-6 HAPPY HOES GROCERIES
      button.navbar-toggler.py-2.px-3(type='button' data-bs-toggle='collapse' data-bs-target='#navbarCollapse')
        span.fa.fa-bars.text-primary
      #navbarCollapse.collapse.navbar-collapse.bg-white
        .navbar-nav.mx-auto
          a.nav-item.nav-link(href='/landingpage') Home page
// Navbar End
// Modal Search Start
#searchModal.modal.fade(tabindex='-1' aria-labelledby='exampleModalLabel' aria-hidden='true')
  .modal-dialog.modal-fullscreen
    .modal-content.rounded-0
      .modal-header
        h5#exampleModalLabel.modal-title Search by keyword
        button.btn-close(type='button' data-bs-dismiss='modal' aria-label='Close')
      .modal-body.d-flex.align-items-center
        .input-group.w-75.mx-auto.d-flex
          input.form-control.p-3(type='search' placeholder='keywords' aria-describedby='search-icon-1')
          span#search-icon-1.input-group-text.p-3
            i.fa.fa-search
// Modal Search End
// Fruits Shop Start
.container-fluid.fruite.py-5
  .container.py-5
    h1.mb-4 COMPANY STOCK 
    .row.g-4
      .col-lg-12
        .row.g-4
          .col-6
        .col-lg-9
          .row.g-4.justify-content-center
            each item in aggregatedData
              .col-md-6.col-lg-6.col-xl-4
                .rounded.position-relative.fruite-item
                  .fruite-img
                    // Dynamically adjust the image source if needed
                    img.img-fluid.w-100.rounded-top(src=`/images/grains.jpg`, alt=item.producename)
                  h4.cardtitle= item._id  
                  .p-4.border.border-secondary.border-top-0.rounded-bottom
                    h4 
                    p stock available: #{item.totalWeight} Kgs
                    .d-flex.justify-content-between.flex-lg-wrap
// Fruits Shop End
// Footer Start
.container-fluid.bg-dark.text-white-50.footer.pt-5.mt-5
  .container.py-5
    .pb-4.mb-4(style='border-bottom: 1px solid rgba(226, 175, 24, 0.5) ;')
      .row.g-4
        .col-lg-3
          a(href='#')
            h1.text-primary.mb-0 HAPPY HOE GROCERIES
            p.text-secondary.mb-0 Quality Products
        .col-lg-6
          .position-relative.mx-auto
            input.form-control.border-0.w-100.py-3.px-4.rounded-pill(type='number' placeholder='Your Email')
            button.btn.btn-primary.border-0.border-secondary.py-3.px-4.position-absolute.rounded-pill.text-white(type='submit' style='top: 0; right: 0;') Subscribe Now
        .col-lg-3
          .d-flex.justify-content-end.pt-3
            a.btn.btn-outline-secondary.me-2.btn-md-square.rounded-circle(href='')
              i.fab.fa-twitter
            a.btn.btn-outline-secondary.me-2.btn-md-square.rounded-circle(href='')
              i.fab.fa-facebook-f
            a.btn.btn-outline-secondary.me-2.btn-md-square.rounded-circle(href='')
              i.fab.fa-youtube
            a.btn.btn-outline-secondary.btn-md-square.rounded-circle(href='')
              i.fab.fa-linkedin-in
    .row.g-5
      .col-lg-5.col-md-6
        .footer-item
          h4.text-light.mb-3 Why People Like us!
          p.mb-4 We are consitent in the distribution of quality grains and cereals
          a.btn.border-secondary.py-2.px-4.rounded-pill.text-primary(href='') Read More
      .col-lg-4.col-md-6
        .d-flex.flex-column.text-start.footer-item
          h4.text-light.mb-3 Company Info
          a.btn-link(href='/acula/about.html') About Us
          a.btn-link(href='/acula/contact.html') Contact Us
          a.btn-link(href='') Privacy Policy
          a.btn-link(href='') Terms &amp; Condition
          a.btn-link(href='') Return Policy
          a.btn-link(href='') FAQs &amp; Help
      .col-lg-3.col-md-6
        .footer-item
          h4.text-light.mb-3 Contact
          p Address: 
          p Email: Example@gmail.com
          p Phone: +0123 4567 8910
          p Payment Accepted
          img.img-fluid(src='/images/payment.png' alt='')
// Footer End
