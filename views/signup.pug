doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title Happy Hoe Grocery - signup 
    //- link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css' rel='stylesheet')
    link(rel='stylesheet' href='/css/register.css')
  body
    .form-bg
      .container
        .row
          .col-md-4.col-md-offset-4
            .form-container
              .form-icon
                i.fa.fa-user
              h1#header.title Create Account
              form#registrationForm.form-horizontal(action="/signup" method="POST")
                .form-group
                  label(for='userName') User Name
                  input#userName.form-control(type='text' name='userName' required)
                  span#error-username.text-danger
                .form-group
                  label(for='role') Role
                  select#role.form-control(name='role' required)
                    option(value='') Select a role
                    option(value='manager') Manager
                    option(value='sales-agent') Sales Agent
                    option(value='admin') Admin
                  span#error-role.text-danger
                .form-group
                  label(for='branch') Branch
                  select#branch.form-control(name='branch' required)
                    option(value='') Select a branch
                    option(value='matuga') Matuga
                    option(value='maganjo') Maganjo
                  span#error-branch.text-danger
                .form-group
                  label(for='email') Email
                  input#email.form-control(type='email' name='email' placeholder='Email address' required)
                  span#error-email.text-danger
                .form-group
                  label(for='password') Password
                  input#password.form-control(type='password' name='password' placeholder='Password' required)
                  span#error-password.text-danger
                input(type='submit' value='submit' class='submit-btn')
                a(href='/login') Already have an account? Login
    script(src='/js/signupValidation.js')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js')