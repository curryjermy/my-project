                h4.card-title Produce on entry
                p.card-description Company stock updated here
                form.forms-sample(action="/update-stock?id=" + stock._id  method="POST")
                  .form-group.row
                    label.col-sm-3.col-form-label(for='exampleInputUsername2') Name of Produce
                    select(name="producename")
                      option(value="maize" selected=producename === "maize") maize
                      option(value="rice" selected=producename === "rice") rice
                      option(value="gnuts" selected=producename === "gnuts") gnuts 
                      option(value="soyabeans" selected=producename === "soyabeans") soyabeans 
                      option(value="beans" selected=producename === "beans") beans 
                      option(value="cowpeas" selected=producename === "cowpeas") cowpeas 
                  .form-group.row
                    label.col-sm-3.col-form-label(for='exampleInputEmail2') Type of produce
                    select(name="producetype")
                      option(value="grains" selected=producetype  === "grains") grains 
                      option(value="cereals" selected=producetype  === "cereals") cereals  
                  .form-group.row
                    label.col-sm-3.col-form-label(for='exampleInputMobile') Date of procurment
                    .col-sm-9
                      input#exampleInputMobile.form-control(type='date' placeholder='Input date' name="procurementdate" value=stock.procurementdate)
                  .form-group.row
                    label.col-sm-3.col-form-label(for='exampleInputPassword2') Time of procurement
                    .col-sm-9
                      input#exampleInputPassword2.form-control(type='time' placeholder='Input time' name="procurementtime" value=stock.procurementtime)
                  .form-group.row
                    label.col-sm-3.col-form-label(for='exampleInputConfirmPassword2') Weight of produce
                    .col-sm-9
                      input#exampleInputConfirmPassword2.form-control(type='number' placeholder='weight should be in tonnes' name="produceweight" value=stock.produceweight)
                  .form-group.row
                    label.col-sm-3.col-form-label(for='exampleInputConfirmPassword2') Cost of produce
                    .col-sm-9
                      input#exampleInputConfirmPassword2.form-control(type='number' placeholder='price should be in ugx' name="producecost" value=stock.producecost)
                  .form-group.row
                    label.col-sm-3.col-form-label(for='exampleInputConfirmPassword2') Name of the dealer
                    select(name="dealername")
                      option(value="matuga farm" selected=dealername === "matuga farm") matuga farm
                      option(value="maganjo farm" selected=dealername === "maganjo farm") maganjo farm
                      option(value="individuals" selected=dealername === "individuals") individuals 
                      option(value="other companies" selected=dealername === "other companies") other companies 
                  .form-group.row
                    label.col-sm-3.col-form-label(for='exampleInputConfirmPassword2') Branch name
